#!/bin/bash

# =======================
# ====== Fonction =======
# =======================

function add(){
	local num1=$1
	local num2=$2
	local sum=$(($num1 + $num2))
	echo "$sum"
}

function subs() {
	local num1=$1
	local num2=$2
	local moins=$(($num1 - $num2))
	echo "$moins"
}

function multiple() {
	local num1=$1
	local num2=$2
	local multiple=$(($num1 * $num2))
	echo "$multiple"
}

function div() {
	local num1=$1
	local num2=$2
	local div=$(($num1 / $num2))
	echo "$div"
}

function num1(){
	local num1=$1
	local num2=$2
	local div=$(($num1 / $num2))
	echo "$div"
}
# ================================
# ===== Programme principale =====
# ================================
echo "Quel opération voulez-vous effectuer? (1234 < + - * / > 1234)"
read reponse

# Bloc qui sers a sortir l operation que le script va faire

if [$reponse -eq + ] ; then
	echo "Addition"
	operation=$(echo "+")
	add($reponse)
elif [$reponse -eq - ] ; then
    echo "Soustraction"
	operation=$(echo "-")
	subs($reponse)
elif [$reponse -eq * ] ; then
    echo "Multiplication"
	operation=$(echo "*")
	multiple($reponse)
else
    echo "Divi"
	operation=$(echo "/")
	div($reponse)
fi

# Bloc qui sort les numéros a calculé
numero1$(echo $reponse | cut -d '$operation' -f1)
numero2$(echo $reponse | cut -d '$operation' -f2)


if [$operation -eq + ]; then
	echo "add(numero1 numero2)"
elif [$opera0tion -eq - ]; then
	subs()
elif [operation -eq * ]; then
	multiple()
else 
	Div()
fi